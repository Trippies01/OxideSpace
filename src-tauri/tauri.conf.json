{
  "productName": "Oxide Space",
  "version": "0.3.0",
  "identifier": "com.oxide.space",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://127.0.0.1:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Oxide Space",
        "width": 1280,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "nsis"],
    "createUpdaterArtifacts": true,
    "icon": ["icons/icon.ico", "icons/icon.png"],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "webviewInstallMode": {
        "type": "embedBootstrapper",
        "silent": true
      },
      "nsis": {
        "installerIcon": "icons/icon.ico"
      }
    },
    "longDescription": "Discord benzeri ses ve metin sohbet uygulamasÄ±.",
    "shortDescription": "Oxide Space - Ses ve sohbet",
    "category": "SocialNetworking",
    "macOS": {
      "minimumSystemVersion": "10.13"
    },
    "linux": {
      "appimage": {
        "bundleMediaFramework": false
      }
    }
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://raw.githubusercontent.com/Trippies01/OxideSpace/main/updates/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEM0NTUxQTQwNjUyRTY0NkUKUldSdVpDNWxRQnBWeEkyejh2a2dtTzA3ZmlDdU9CZWJaRG53SGJ3aW1Nbng4YVlFRjk5eGZVeWsK"
    }
  }
}


